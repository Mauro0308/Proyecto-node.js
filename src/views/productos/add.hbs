<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR NUEVO PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo:Megumin" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="description" class="input-group-text">Descripcion</label>
                        <input class="form-control" type="text" name="description" id="description" placeholder="Ejemplo: Figura de anime de Konosuba" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="amount" class="input-group-text">Cantidad</label>
                        <input class="form-control" type="number" name="amount" id="amount" placeholder="0" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Crear</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>